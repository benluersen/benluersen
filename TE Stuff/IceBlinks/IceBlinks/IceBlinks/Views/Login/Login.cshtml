@model LoginViewModel

@section StyleSheet {
    <link href="~/css/Login.css" rel="stylesheet" />
}

@section Title {
    Login
}
<h1>Login</h1>
<p style="text-align: center;">Welcome to IceBlinks - A Student Profile Builder</p>
<div class="row loginHeader">
    <div class="col-sm-4"></div>
    <div class="col-sm-8">
        <form asp-controller="User" asp-action="Login" method="post" class="pretty-forms">
            <div class="form-group">
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Email" class="error"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="error"></span>
            </div>

            <div class="error" id="login-error-message">
                @(Html.ValidationMessage("invalid-user"))
            </div>
            <div class="registerAccount">
                <a asp-controller="Login" asp-action="Register">Create new account</a>
            </div>
            <button type="submit" class="btn btn-info">Login</button>
        </form>
    </div>
</div>